@model IEnumerable<Application.DTOs.ContractDTO>

@{
    ViewData["Title"] = "Contract Management";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Register New" class="fas fa-plus"></span> Register New
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValuePerHour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalHours)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalValue)
                </th>                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValuePerHour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalHours)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalValue)
                    </td>
                    <td>
                        <a asp-controller= "TimeLogs" asp-action="RegisterTimeLog" asp-route-id="@item.Id" title="Index" class="btn btn-success">
                            <span class="fas fa-edit">Register TimeLog</span>
                        </a>

                        <a asp-controller= "TimeLogs" asp-action="Index" asp-route-id="@item.Id" title="Index" class="btn btn-primary">
                            <span class="fas fa-search">Ver TimeLogs</span>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-danger">
                            <span class="fas fa-trash-alt">Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>